<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_movies"
    app:startDestination="@id/homeFragment"
    tools:ignore="UnusedNavigation">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.merqueo.co.home.presentacion.fragments.HomeFragment"
        android:label="Movies"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/homeFragment" />

    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.merqueo.co.home.presentacion.fragments.DetailFragment"
        android:label="Detalle de pelicula"
        tools:layout="@layout/fragment_detail_">
        <argument
            android:name="movieID"
            app:argType="integer" />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="merqueoMovie://moviedetails/{movieID}" />
    </fragment>
</navigation>

